{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Threads Post",
  "type": "object",
  "required": ["type", "format", "posts", "metadata"],
  "properties": {
    "type": { "const": "threads_post" },
    "format": { "enum": ["single", "carousel"] },
    "posts": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": { "type": "string", "maxLength": 500 },
          "mediaDescription": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["category"],
      "properties": {
        "category": {
          "enum": [
            "tips",
            "news",
            "experience",
            "discussion",
            "behind_the_scenes",
            "hot_take"
          ]
        },
        "scheduledHour": { "type": "integer", "minimum": 0, "maximum": 23 }
      }
    }
  }
}
