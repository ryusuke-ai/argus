{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NoteStrategy",
  "description": "Phase 1 出力: note 記事のリサーチ & 戦略",
  "type": "object",
  "required": ["version", "topic", "category", "storyAngle", "targetEmotion", "differentiators"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "topic": {
      "type": "string",
      "description": "記事のテーマ"
    },
    "category": {
      "type": "string",
      "enum": ["experience", "insight", "tutorial", "review"],
      "description": "記事カテゴリ"
    },
    "storyAngle": {
      "type": "string",
      "description": "体験・ストーリーの角度（どんな体験を語るか）"
    },
    "targetEmotion": {
      "type": "string",
      "description": "読者に感じてほしい感情（共感、驚き、学び等）"
    },
    "targetAudience": {
      "type": "string",
      "description": "ターゲット読者層"
    },
    "differentiators": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "monetization": {
      "type": "boolean",
      "description": "有料記事にするか"
    }
  }
}
