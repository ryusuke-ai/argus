{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHubStructure",
  "description": "Phase 2 出力: GitHub README の構成設計",
  "type": "object",
  "required": ["version", "overview", "features", "quickStart", "badges"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "overview": {
      "type": "string",
      "description": "1-3行の Overview テキスト"
    },
    "features": {
      "type": "array",
      "minItems": 3,
      "maxItems": 7,
      "items": { "type": "string" },
      "description": "主要機能リスト"
    },
    "quickStart": {
      "type": "object",
      "required": ["prerequisites", "commands"],
      "properties": {
        "prerequisites": {
          "type": "array",
          "items": { "type": "string" },
          "description": "前提条件（Node.js >= 22 等）"
        },
        "commands": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description", "command"],
            "properties": {
              "description": { "type": "string" },
              "command": { "type": "string" }
            }
          }
        }
      }
    },
    "badges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "url"],
        "properties": {
          "type": { "type": "string", "enum": ["ci", "npm", "license", "typescript"] },
          "url": { "type": "string" }
        }
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["heading", "purpose"],
        "properties": {
          "heading": { "type": "string" },
          "purpose": { "type": "string" }
        }
      },
      "description": "追加セクション（Usage, Configuration 等）"
    }
  }
}
