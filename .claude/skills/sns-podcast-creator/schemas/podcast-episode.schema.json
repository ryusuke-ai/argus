{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Podcast Episode",
  "type": "object",
  "required": [
    "type",
    "title",
    "description",
    "showNotes",
    "script",
    "metadata"
  ],
  "properties": {
    "type": { "const": "podcast_episode" },
    "title": { "type": "string", "maxLength": 100 },
    "subtitle": { "type": "string", "maxLength": 200 },
    "description": { "type": "string", "maxLength": 1000 },
    "showNotes": { "type": "string" },
    "script": {
      "type": "object",
      "required": ["opening", "hook", "chapters", "summary", "closing"],
      "properties": {
        "opening": {
          "type": "object",
          "required": ["duration", "content"],
          "properties": {
            "duration": { "type": "string" },
            "content": { "type": "string" }
          }
        },
        "hook": {
          "type": "object",
          "required": ["duration", "content"],
          "properties": {
            "duration": { "type": "string" },
            "content": { "type": "string" }
          }
        },
        "chapters": {
          "type": "array",
          "minItems": 3,
          "maxItems": 5,
          "items": {
            "type": "object",
            "required": [
              "title",
              "startTime",
              "duration",
              "content",
              "keyPoints"
            ],
            "properties": {
              "title": { "type": "string" },
              "startTime": { "type": "string" },
              "duration": { "type": "string" },
              "content": { "type": "string" },
              "keyPoints": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              }
            }
          }
        },
        "summary": {
          "type": "object",
          "required": ["duration", "content"],
          "properties": {
            "duration": { "type": "string" },
            "content": { "type": "string" }
          }
        },
        "closing": {
          "type": "object",
          "required": ["duration", "content"],
          "properties": {
            "duration": { "type": "string" },
            "content": { "type": "string" }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["category", "estimatedDuration"],
      "properties": {
        "category": {
          "enum": [
            "deep_dive",
            "tutorial",
            "weekly_roundup",
            "experience",
            "tool_review",
            "behind_the_scenes"
          ]
        },
        "estimatedDuration": {
          "type": "integer",
          "minimum": 15,
          "maximum": 30
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 10
        },
        "scheduledDay": {
          "enum": [
            "monday",
            "tuesday",
            "wednesday",
            "thursday",
            "friday",
            "saturday",
            "sunday"
          ]
        },
        "scheduledHour": { "type": "integer", "minimum": 0, "maximum": 23 }
      }
    }
  }
}
