{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "X Post",
  "type": "object",
  "required": ["type", "format", "posts", "metadata"],
  "properties": {
    "type": { "const": "x_post" },
    "format": { "enum": ["single", "thread"] },
    "posts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": { "type": "string", "maxLength": 280 },
          "hashtags": { "type": "array", "items": { "type": "string" }, "maxItems": 2 },
          "mediaDescription": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["category"],
      "properties": {
        "category": { "enum": ["tips", "news", "experience", "code", "summary", "discussion", "youtube_clip"] },
        "scheduledHour": { "type": "integer", "minimum": 0, "maximum": 23 }
      }
    }
  }
}
